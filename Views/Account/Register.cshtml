@model RegisterVM

<main>
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Register</h2>
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                    <form method="POST" class="register-form" id="register-form">
                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span><br />
                            <span asp-validation-for="FirstName" ></span><br />
                            <label asp-for="FirstName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="FirstName" placeholder="Your Name">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span><br />
                            <span asp-validation-for="LastName" ></span><br />
                            <label asp-for="LastName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="LastName" placeholder="Your Surname">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span><br />
                            <span asp-validation-for="UserName" ></span><br />
                            <label asp-for="UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="UserName" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span><br />
                            <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Email" placeholder="Your Email">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Password" class="text-danger"></span><br />
                            <label  asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                            <input  asp-for="Password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span><br />
                            <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="ConfirmPassword" placeholder="Repeat your password">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Terms" class="text-danger"></span><br />
                            <input asp-for="Terms" class="agree-term">
                            <label asp-for="Terms" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register">
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/admin/images/signup-image.jpg" alt="sing up image"></figure>
                    <a href="#" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
</main>
