@inject OnlineShop.Services.LayoutService layout
@*@await Html.PartialAsync("_CartCheckoutPartialView",Model)*@

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (CartItemVM item in layout.GetBasket()?.CartItemVms)
                    {
                        <tr>
                            <td class="align-middle"><img src="~/assets/img/products/@item.clothes.ImageClothes.FirstOrDefault(i=>i.IsMain==true)?.Name" alt="" style="width: 50px;"> @item.clothes.Name</td>
                            <td class="align-middle">$@item.clothes.Price</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <a id="minus"  asp-controller="basket" asp-action="decrease" asp-route-id="@item.clothes.Id" class="btn btn-sm btn-primary btn-minus disable" >
                                            <i class="fa fa-minus"></i>
                                        </a>
                                    </div>
                                    @if (layout.GetBasket() != null)
                                    {
                                        <input  id="input" type="text" class="form-control bg-secondary border-0 text-center" value="@(layout.GetBasket().CartItemVms.FirstOrDefault(x=>x.ClothesId==item.clothes.Id)?.Quantity<1 ? 1 : layout.GetBasket().CartItemVms.FirstOrDefault(x=>x.ClothesId==item.clothes.Id)?.Quantity)">
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control bg-secondary border-0 text-center" value="0">
                                    }
                                    <div class="input-group-btn">
                                        <a asp-controller="basket" asp-action="increase" asp-route-id="@item.clothes.Id" class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">$@item.TotalPrice</td>
                            <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <form class="mb-30" action="">
                <div class="input-group">
                    <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Subtotal</h6>
                        <h6>$150</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total</h5>
                        <h5>$160</h5>
                    </div>
                    <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

