@model List<Clothe>

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Clothes Page</h4>
            <a asp-area="admin" asp-controller="clothes" asp-action="create" class="card-description btn btn-info text-white">
                Create Clothes
            </a>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Price
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                              Update
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Detail
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Clothe clothes in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @clothes.Id
                                </td>
                                <td>
                                    <img style="width:120px;height:80px;object-fit:contain" src="~/assets/img/products/@clothes.ImageClothes.FirstOrDefault(i=>i.IsMain==true)?.Name" />
                                </td>
                                <td>
                                    @clothes.Name
                                </td>
                                <td>
                                    @clothes.Price
                                </td>
                                <td>
                                    @(clothes.Desc.Count()>50 ? clothes.Desc.Substring(0,50) + "..." : clothes.Desc)
                                </td>

                                <td>
                                    <a asp-area="admin" asp-controller="clothes" asp-action="update" asp-route-id="@clothes.Id" class="btn btn-outline-primary">
                                        <i class="mdi mdi-border-color text-primary"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="admin" asp-controller="clothes" asp-action="delete" asp-route-id="@clothes.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete text-danger "></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="admin" asp-controller="clothes" asp-action="Details" asp-route-id="@clothes.Id" class="btn btn-outline-info">
                                        <i class="mdi mdi-file text-info"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
