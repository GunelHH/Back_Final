@model List<ClotheInformation>

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Clothes Page</h4>
            <a asp-area="admin" asp-controller="clotheinformation" asp-action="create" class="card-description btn btn-info text-white">
                Create Clothes
            </a>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Update
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Detail
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                        <td>
                            There is No Information yet!
                        </td>

                    }
                    else
                    {
                        @foreach (ClotheInformation inform in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @inform.Id
                                </td>
                                <td>
                                    @inform.Title
                                </td>
                                <td>
                                    @(inform.Desc.Count() > 100 ? inform.Desc.Substring(0, 100) + "..." : inform.Desc)
                                </td>
                                <td>
                                    <a asp-area="admin" asp-controller="clotheinformation" asp-action="update" asp-route-id="@inform.Id" class="btn btn-outline-primary">
                                        <i class="mdi mdi-border-color text-primary"></i>
                                    </a>
                                </td>
                                <td>
                                    <a id="remove-btn" asp-area="admin" asp-controller="clotheinformation" asp-action="delete" asp-route-id="@inform.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete text-danger "></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="admin" asp-controller="clotheinformation" asp-action="Details" asp-route-id="@inform.Id" class="btn btn-outline-info">
                                        <i class="mdi mdi-file text-info"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }

                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>




