@model List<Color>

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Clothes Page</h4>
            <a asp-area="admin" asp-controller="color" asp-action="create" class="card-description btn btn-info text-white">
                Create Clothes
            </a>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Update
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Detail
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        @foreach (Color color in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @color.Id
                                </td>
                                <td>
                                    @color.Name
                                </td>
                                
                                <td>
                                    <a asp-area="admin" asp-controller="color" asp-action="update" asp-route-id="@color.Id" class="btn btn-outline-primary">
                                        <i class="mdi mdi-border-color text-primary"></i>
                                    </a>
                                </td>
                                <td>
                                    <a id="remove-btn" asp-area="admin" asp-controller="color" asp-action="delete" asp-route-id="@color.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete text-danger "></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="admin" asp-controller="color" asp-action="Details" asp-route-id="@color.Id" class="btn btn-outline-info">
                                        <i class="mdi mdi-file text-info"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                  

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>






