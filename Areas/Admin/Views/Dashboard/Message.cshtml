@model List<Message>

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages for Admin</h4>


            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Subject
                            </th>
                            <th>
                               Message
                            </th>
                            <th>
                               Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Message message in Model)
                        {
                            <tr class="table-success">
                                <td>
                                    @message.Name
                                </td>
                                <td>
                                    @message.Email
                                </td>
                                <td>
                                    @message.Subject
                                </td>
                                <td>
                                    @message.Body
                                </td>                            
                                <td>
                                    <a id="remove-btn" asp-area="admin" asp-controller="dashboard" asp-action="delete" asp-route-id="@message.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete text-danger "></i>
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>







