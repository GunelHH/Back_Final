@model List<Advertisement>

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Page</h4>
                <a asp-area="admin" asp-controller="advertisement" asp-action="create" class="card-description btn btn-info text-white">
                    Create Slider
                </a>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Button Script
                                </th>
                                <th>
                                   Order
                                </th>
                                <th>
                                    Update
                                </th>
                                <th>
                                    Delete
                                </th>
                                <th>
                                    Detail
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Advertisement advert in Model)
                            {
                                <tr class="table-primary">
                                    <td>
                                        @advert.Id
                                    </td>
                                    <td>
                                        <img style="width:120px;height:80px;object-fit:contain" src="~/assets/img/@advert.Image" />
                                    </td>
                                    <td>
                                        @advert.Save
                                    </td>
                                    <td>
                                        @(advert.Title.Count()>50 ? advert.Title.Substring(0,50) + "..." : advert.Title)
                                    </td>
                                    <td>
                                        @advert.ButtonScript
                                    </td>
                                    <td>
                                        @advert.Order
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="advertisement" asp-action="update" asp-route-id="@advert.Id" class="btn btn-primary">
                                            <i class="mdi mdi-border-color text-white"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="advertisement" asp-action="delete" asp-route-id="@advert.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete text-white "></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="advertisement" asp-action="Details" asp-route-id="@advert.Id" class="btn btn-info">
                                            <i class="mdi mdi-file text-white"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
