@model Advertisement
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <h1>Edit Advertisement</h1>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div>
            <label>Image:</label><br />
            <img src="~/assets/img/@Model.Image"/>
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label>Discount:</label><br />
            <input asp-for="Save" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Save"></span>
        </div>
        <div>
            <label>Title:</label><br />
            <input asp-for="Title" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div>
            <label>Button Url:</label><br />
            <input asp-for="ButtonScript" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="ButtonScript"></span>
        </div>
        <div>
            <label>Order:</label><br />
            <input asp-for="Order" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Order"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </form>
</div>