@model List<Slider>

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Page</h4>
            <a asp-area="admin" asp-controller="slider" asp-action="create" class="card-description btn btn-info text-white">
              Create Slider
            </a>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th >
                                Id
                            </th>
                            <th >
                               Image
                            </th>
                            <th >
                               Title
                            </th>
                            <th >
                              Description
                            </th>
                            <th >
                                Button Script
                            </th>
                            <th >
                               Update
                            </th>
                            <th >
                                Delete
                            </th>
                            <th >
                               Detail
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider slider in Model)
                        {
                            <tr class="table-danger">
                                <td > 
                                    @slider.Id
                                </td>
                                <td >
                                   <img style="width:120px;height:80px;object-fit:contain" src="~/assets/img/@slider.Image" />
                                </td>
                                <td >
                                    @slider.Title
                                </td>
                                <td >
                                 @(slider.Desc.Count()>50 ? slider.Desc.Substring(0,50) + "..." : slider.Desc)
                                </td>
                                <td >
                                   @slider.ButtonScript
                                </td>
                                <td >
                                  <a asp-area="admin" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id"  class="btn btn-primary" >
                                      <i class="mdi mdi-border-color text-white"></i>
                                  </a>
                                </td>
                                <td >
                                    <a asp-area="admin" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id"  class="btn btn-danger">
                                        <i class="mdi mdi-delete text-white "></i>
                                    </a>
                                </td>
                                <td >
                                    <a asp-area="admin" asp-controller="slider" asp-action="Details" asp-route-id="@slider.Id" class="btn btn-info">
                                        <i class="mdi mdi-file text-white"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>